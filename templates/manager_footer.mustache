<div class="seo-manager-footer" style="background: lightgoldenrodyellow;{{!
    }}border-radius: 15px;{{!
    }}padding: 15px;{{!
    }}max-height: 350px;{{!
    }}position: fixed;{{!
    }}bottom: 0;{{!
    }}right: 0;{{!
    }}z-index: 5;">
    <button class="seo-manager-footer__toggle" style="position: absolute;{{!
        }}top: 5px;{{!
        }}right: 5px;{{!
        }}background: none;{{!
        }}border: none;{{!
        }}cursor: pointer;">&#9650;</button>
    <div class="seo-manager-footer__content" style="display:none;overflow-y: auto; max-height: 320px;margin: 10px 0 0 0;">
        <h4>{{#str}} seoinfo, theme_seo {{/str}}</h4>
        {{#managable}}
        <a href="{{managerurl}}">{{#str}} seomanage, theme_seo {{/str}}</a>
        {{/managable}}
        <ul class="seo-info">
            <li {{^public}}style="color: red;"{{/public}}>{{!
            }}<b>{{#str}} public, theme_seo {{/str}}: </b>{{!
            }} {{#public}}{{#str}}yes{{/str}}{{/public}}{{^public}}{{#str}}no{{/str}}{{/public}}</li>
            <li {{^indexable}}style="color:red;"{{/indexable}}>{{!
            }}<b>{{#str}} indexable, theme_seo {{/str}}: </b>{{!
            }} {{#indexable}}{{#str}} yes{{/str}}{{/indexable}}{{^indexable}}{{#str}}no{{/str}}{{/indexable}}</li>
            <li {{#redirected}}style="color:red;"{{/redirected}}>{{!
            }}<b>{{#str}} redirected, theme_seo {{/str}}: </b>{{!
            }} {{#redirected}}{{#str}}yes{{/str}}{{/redirected}}{{^redirected}}{{#str}}no{{/str}}{{/redirected}}</li>
            <li><b>{{#redirected}}{{#str}} redirectionurl, theme_seo {{/str}}{{/redirected}}{{!
            }}{{^redirected}}{{#str}} pageurl, theme_seo{{/str}}{{/redirected}}: </b>{{!
            }}<a href="{{url}}">{{url}}</a></li>
            <li><b>Context: </b>{{context}}</li>
            <li><b>Context name: </b>{{contextname}}</li>
            <li><b>Context instance id: </b>{{instanceid}}</li>
        </ul>
        <div class="seo-info-details">
        {{^crawlable}}
            {{#str}} nothingtodisplay {{/str}}
        {{/crawlable}}
        </div>
    </div>
</div>